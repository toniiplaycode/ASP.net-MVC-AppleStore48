﻿
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css" integrity="sha512-5A8nwdMOWrSz20fDsjczgUidUBR8liPYU+WymTZP1lmY9G6Oc7HlZv156XqnsgNUzTyMefFTcsFH/tnJE/+xBg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="~/Areas/Admin/AssetAdmin/style.css">
    <link rel="stylesheet" href="~/asset/css/style.css">
    <title>Login ADMIN | Shop48-ASP.NET</title>
</head>

<body id="login">
    <div class="container-fluid px-1 px-md-5 px-lg-1 px-xl-5 py-5 mx-auto">
        <div class="card card0 border-0">
            <div class="row d-flex">
                <div class="col-lg-6">
                    <div class="card1 pb-5">
                        <div class="row px-3 justify-content-center mt-4 mb-5 border-line">
                            <img src="~/Areas/Admin/AssetAdmin/banner-admin.png" class="banner-admin">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card2 card border-0 px-4 py-5">
                        <div class="row px-3">
                            <h3 class="text-center mb-4">LOGIN ADMIN</h3>
                        </div>
                        <form action="Login" method="post">
                            <div class="row px-3 form-group">
                                <label class="mb-1">
                                    <h6 class="mb-0 text-sm">Email</h6>
                                </label>
                                <input class="mb-4 form-control" type="email" name="Email" placeholder="Enter Email">
                                <span style="color: red; font-size:12px">
                                    @*@ViewBag.error_email_null*@
                                </span>
                            </div>
                            <div class="row px-3 form-group">
                                <label class="mb-1">
                                    <h6 class="mb-0 text-sm">Password</h6>
                                </label>
                                <input class="form-control" type="password" name="password" placeholder="Enter password">
                                <span style="color: red; font-size:12px">
                                    @ViewBag.error_pass
                                </span>
                            </div>
                            <div class="row mb-3 px-3 my-3">
                                <button type="submit" class="btn btn-primary color-primary btn-hover">Login</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="color-primary py-4">
                <div class="row px-3" style="padding:20px 0px">
                    <small class="ml-4 ml-sm-5 mb-2">
                        <img src="~/asset/img/logo.png" style="width:120px">
                    </small>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js" integrity="sha512-3P8rXCuGJdNZOnUx/03c1jOTnMn3rP63nBip5gOP2qmUh5YAdVAvFZ1E+QLZZbC1rtMrQb+mah3AfYW11RUrWA==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
</body>
</html>